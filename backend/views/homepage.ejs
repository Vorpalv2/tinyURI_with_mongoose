<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="shortcut icon"
      href="../images/favicon.ico"
      type="image/x-icon"
    />
    <title>Homepage</title>
    <style>
      body {
        font-family: "Trebuchet MS", "Lucida Sans Unicode", "Lucida Grande",
          "Lucida Sans", Arial, sans-serif;
        background-color: black;
        color: whitesmoke;
        padding: 20px;
      }

      form {
        margin-bottom: 20px;
      }

      input[type="text"] {
        padding: 10px;
        margin-right: 10px;
      }

      button {
        padding: 10px 20px;
        background-color: #007bff;
        border: none;
        color: white;
        border-radius: 4px;
        cursor: pointer;
      }

      button:hover {
        background-color: #0056b3;
      }

      table {
        border-collapse: collapse;
        width: 100%;
        color: whitesmoke;
      }

      th,
      td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
      }

      th {
        background-color: #007bff;
        color: white;
      }

      tr:nth-child(even) {
        background-color: #222;
      }
    </style>
  </head>
  <body>
    <h1>Hello from Backend</h1>
    <form action="/url/" method="post">
      <label for="url">URL:</label>
      <input type="text" name="url" />
      <button>Generate</button>
    </form>

    <div class="table">
      <table>
        <tr>
          <th>TinyURL</th>
          <th>RedirectURL</th>
          <th>No. of Clicks</th>
        </tr>
        <% data.map((element)=>{ %>
        <tr>
          <td><%=element.tinyurl %></td>
          <td><%= element.redirecturl %></td>
          <td><%= element.timestamp.length %></td>
        </tr>
        <% }) %>
      </table>
    </div>
  </body>
</html>
